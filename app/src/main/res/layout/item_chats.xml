<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="8dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfileImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_profile"
        app:civ_border_width="1dp"
        app:civ_border_color="#2E335F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Username -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Username"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/userProfileImageView"
        app:layout_constraintTop_toTopOf="@id/userProfileImageView"
        app:layout_constraintEnd_toStartOf="@id/timeStampTextView" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/timeStampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:15"
        android:textSize="12sp"
        android:textColor="#9FA3FF"
        app:layout_constraintTop_toTopOf="@id/usernameTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Last Message -->
    <TextView
        android:id="@+id/lastMsgTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Last message goes here"
        android:textSize="14sp"
        android:textColor="#B0B3FF"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/usernameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameTextView" />

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#2E335F"
        app:layout_constraintTop_toBottomOf="@id/lastMsgTextView"
        app:layout_constraintStart_toStartOf="@id/usernameTextView"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
