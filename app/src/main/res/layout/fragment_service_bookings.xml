<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ServiceBookingsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookingsRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/noBookingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Bookings"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <include layout="@layout/no_internet_layout"/>
    <include layout="@layout/empty_state_layout"/>

</FrameLayout>