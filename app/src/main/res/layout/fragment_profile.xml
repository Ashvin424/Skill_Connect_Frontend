<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14162E"
    tools:context=".fragments.ProfileFragment">

    <!-- ================= MAIN CONTENT ================= -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/profileView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="32dp">

            <!-- Settings -->
            <ImageButton
                android:id="@+id/settingBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/icon_setting"
                android:contentDescription="Settings"
                app:tint="@android:color/white" />

            <!-- Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/icon_profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#2E335F" />

            <!-- Name -->
            <TextView
                android:id="@+id/fullNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingTop="4dp" />

            <!-- Username -->
            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="#9FA3FF"
                android:paddingTop="2dp" />

            <!-- Joined date -->
            <TextView
                android:id="@+id/userCreatedAtTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#7E82C7"
                android:paddingTop="2dp"
                android:paddingBottom="8dp" />

            <!-- ================= STATS ================= -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <!-- Skills -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    app:cardBackgroundColor="#22263E"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#2E335F"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/skillCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:text="Skills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#9FA3FF"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Services -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    app:cardBackgroundColor="#22263E"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#2E335F"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/serviceCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:text="Services"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#9FA3FF"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Rating -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ratingsCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#22263E"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#2E335F"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/userRatingTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="4dp"
                                android:src="@drawable/icon_star"
                                android:contentDescription="Rating" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/reviewCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ratings"
                            android:textSize="13sp"
                            android:textColor="#9FA3FF"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- ================= BOOKINGS ================= -->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bookingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#22263E"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="#2E335F"
                app:strokeWidth="1dp"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bookings"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_forward_arrow"
                        android:contentDescription="View Bookings"
                        app:tint="#9FA3FF" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= BIO ================= -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="28dp" />

            <TextView
                android:id="@+id/bioTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#B0B3FF"
                android:layout_marginTop="8dp" />

            <!-- ================= SKILLS ================= -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp" />

            <!-- ================= SERVICES ================= -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:clipToPadding="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ================= LOADING ================= -->

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingAnim"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/loading"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
    </FrameLayout>

    <!-- ================= STATES ================= -->

    <include
        android:id="@+id/noInternetLayout"
        layout="@layout/no_internet_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/emptyStateLayout"
        layout="@layout/empty_state_layout"
        android:visibility="gone" />

</FrameLayout>
