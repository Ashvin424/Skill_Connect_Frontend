<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14162E"
    tools:context=".fragments.BrowseFragment">

    <!-- ================= MAIN CONTENT ================= -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ================= SEARCH BAR ================= -->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#2E335F"
            app:cardBackgroundColor="#22263E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <!-- Search type -->
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/searchBySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingEnd="8dp" />

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="#3A3F6E" />

                <!-- Search input -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Search services, skills, users"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:textColor="@android:color/white"
                    android:textColorHint="#9FA3FF"
                    android:textSize="16sp" />

                <!-- Search button -->
                <ImageButton
                    android:id="@+id/searchBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Search"
                    android:src="@drawable/icon_search"
                    app:tint="@android:color/white" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ================= SERVICES LIST ================= -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewServices"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            tools:listitem="@layout/item_service" />

    </LinearLayout>

    <!-- ================= LOADING OVERLAY ================= -->

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingAnim"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/loading"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
    </FrameLayout>

    <!-- ================= EMPTY STATE ================= -->

    <include
        android:id="@+id/emptyStateLayout"
        layout="@layout/empty_state_layout"
        android:visibility="gone" />

    <!-- ================= NO INTERNET ================= -->

    <include
        android:id="@+id/noInternetLayout"
        layout="@layout/no_internet_layout"
        android:visibility="gone" />

</FrameLayout>
